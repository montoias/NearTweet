<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Login" >

    <EditText
        android:id="@+id/passwordString"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="178dp"
        android:ems="10"
        android:hint="@string/login_password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/userString"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_above="@+id/passwordString"
        android:layout_alignLeft="@+id/passwordString"
        android:layout_marginBottom="64dp"
        android:ems="10"
        android:hint="@string/login_user" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/passwordString"
        android:layout_below="@+id/passwordString"
        android:layout_marginLeft="122dp"
        android:layout_marginTop="83dp"
        android:onClick="register"
        android:text="@string/Register" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/userString"
        android:layout_marginRight="188dp"
        android:layout_toLeftOf="@+id/passwordString"
        android:src="@drawable/neartweet" />

</RelativeLayout>